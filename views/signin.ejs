<% layout('layout2') %>
    <link rel="stylesheet" href="/css/separate/pages/login.min.css">
    <link rel="stylesheet" href="/css/separate/elements/ribbons.min.css">
    <link rel="stylesheet" href="/css/separate/pages/ribbons.min.css">
    <form class="sign-box" method="post">
        <div class="sign-avatar">
            <img src="/img/avatar-sign.png" alt="">
        </div>
        <div class="ribbon right-top">
            <i class="fa fa-user"></i>
            <span>Member</span>
        </div>
        <header class="sign-title">Sign In</header>
        <div class="form-group">
            <input id="email" name="email" type="text" class="form-control" placeholder="E-Mail" />
        </div>
        <div class="form-group">
            <input id="password" name="password" type="password" class="form-control" placeholder="Password" />
        </div>
        <div class="form-group">
            <div class="checkbox float-left">
                <input type="checkbox" id="signedin" />
                <label for="signed-in">Keep me signed in &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
            </div>
        </div>
        <button type="submit" class="btn btn-rounded">Sign in</button>
        <br>
        <p class="sign-note">New to our website? <a href="/signup" title="Sign up a new account!">Sign up</a> <br>Forgotten password? <a href="/reset" title="Reset password">Reset</a></p>
        <% if(error != null){ %>
            <div class="form-error-text-block">
                <ul>
                    <% for (var i = 0; i < error.length; i++) { %>
                        <li>
                            <%= error[i] %>
                        </li>
                        <% } %>
                </ul>
            </div>
            <% } %>
    </form>

    <script>
        $(document).ready(function() {
            $('#password').password();
        });
    </script>
    <script src="/js/lib/hide-show-password/bootstrap-show-password.min.js"></script>