        //type column formatter
        function typeColFormatter(value, row, index) {
            var htmlString = '<span id="genderIconSpan"><i>-</i></span>';
            switch (value) {
                case 1:
                    htmlString = '<div title="Male - Toilet Area" ><i class="like font-icon fa fa-male"></i></div>';
                    break;
                case 2:
                    htmlString = '<div title="Female - Toilet Area" ><i class="like font-icon fa fa-female"></i></div>';
                    break;
                case 3:
